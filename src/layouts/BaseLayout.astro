---
/**
 * BaseLayout - Core layout component with SEO optimization
 * Used across all pages for consistent structure and metadata
 */
import { ViewTransitions } from 'astro:transitions';
import '../styles/global.css';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import StickyCTA from '@components/StickyCTA.astro';
import ExitIntentPopup from '@components/ExitIntentPopup.astro';
import {
  generateTitle,
  generateDescription,
  generateCanonicalUrl,
  generateRobotsTag,
  generateGeoTags,
} from '@utils/seo';
import {
  generateRealEstateAgentSchema,
  generateLocalBusinessSchema,
  stringifySchema,
} from '@utils/schema';

interface Props {
  title: string;
  description: string;
  ogImage?: string;
  noindex?: boolean;
  canonical?: string;
  schema?: any; // Additional schema markup
}

const {
  title,
  description,
  ogImage = '/images/og-default.jpg',
  noindex = false,
  canonical,
  schema,
} = Astro.props;

// Generate meta values
const fullTitle = generateTitle(title);
const metaDescription = generateDescription(description);
const canonicalUrl = canonical || generateCanonicalUrl(Astro.url.pathname);
const robotsTag = generateRobotsTag(noindex);
const geoTags = generateGeoTags();

// OG Image URL (make absolute)
const ogImageUrl = ogImage.startsWith('http')
  ? ogImage
  : `${Astro.site}${ogImage.replace(/^\//, '')}`;

// Generate global schema markup
const agentSchema = generateRealEstateAgentSchema();
const businessSchema = generateLocalBusinessSchema();
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{fullTitle}</title>
    <meta name="title" content={fullTitle} />
    <meta name="description" content={metaDescription} />
    <meta name="robots" content={robotsTag} />
    <link rel="canonical" href={canonicalUrl} />

    <!-- Geo-Targeting Meta Tags -->
    <meta name="geo.region" content={geoTags['geo.region']} />
    <meta name="geo.placename" content={geoTags['geo.placename']} />
    <meta name="geo.position" content={geoTags['geo.position']} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={metaDescription} />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:site_name" content="Steven Frato - Century 21" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalUrl} />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={metaDescription} />
    <meta name="twitter:image" content={ogImageUrl} />

    <!-- Favicon (Placeholder) -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />

    <!-- Structured Data - Real Estate Agent -->
    <script type="application/ld+json" set:html={stringifySchema(agentSchema)} />

    <!-- Structured Data - Local Business -->
    <script type="application/ld+json" set:html={stringifySchema(businessSchema)} />

    <!-- Page-Specific Schema (if provided) -->
    {schema && (
      <script type="application/ld+json" set:html={stringifySchema(schema)} />
    )}

    <!-- View Transitions for smooth page navigation -->
    <ViewTransitions />

    <!-- Preconnect to external domains for performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- Google Analytics -->
    <!-- Replace G-XXXXXXXXXX with your actual GA4 Measurement ID -->
    <script is:inline>
      // Only load GA in production
      if (window.location.hostname !== 'localhost') {
        const gaScript = document.createElement('script');
        gaScript.async = true;
        gaScript.src = 'https://www.googletagmanager.com/gtag/js?id=G-XXXXXXXXXX';
        document.head.appendChild(gaScript);

        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', 'G-XXXXXXXXXX');

        // Make gtag available globally
        window.gtag = gtag;
      }
    </script>
  </head>

  <body>
    <!-- Skip to Content Link (Accessibility) -->
    <a href="#main-content" class="skip-to-content">
      Skip to main content
    </a>

    <!-- Header -->
    <Header />

    <!-- Main Content Slot -->
    <main id="main-content">
      <slot />
    </main>

    <!-- Footer -->
    <Footer />

    <!-- Sticky CTA Bar -->
    <StickyCTA />

    <!-- Exit Intent Popup -->
    <ExitIntentPopup />

    <!-- Cookie Consent (Add if needed for compliance) -->
    <!-- <div id="cookie-consent">...</div> -->
  </body>
</html>

<style>
  /* Page-level styles */
  html {
    scroll-behavior: smooth;
  }

  body {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  main {
    flex: 1;
  }
</style>
