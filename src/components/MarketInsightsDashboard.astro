---
/**
 * MarketInsightsDashboard Component
 * South Jersey real estate market data and insights
 * Replaces testimonials for new agent without client reviews
 */

const marketData = [
  {
    icon: 'home-dollar',
    title: 'Average Home Prices by County',
    stats: [
      { label: 'Burlington County', value: '$395,000', sublabel: 'median' },
      { label: 'Mercer County', value: '$425,000', sublabel: 'median' },
      { label: 'Middlesex County', value: '$445,000', sublabel: 'median' },
    ],
    source: 'Source: NJ MLS, January 2026',
  },
  {
    icon: 'chart-trend',
    title: 'Current Market Trends',
    stats: [
      { label: 'Days on Market', value: '35 days', sublabel: 'average' },
      { label: 'Market Status', value: 'Balanced', sublabel: 'inventory' },
      { label: 'Price Growth', value: '+3.2%', sublabel: 'year-over-year' },
    ],
    source: 'Updated monthly with fresh data',
  },
  {
    icon: 'map-pins',
    title: 'Most Active Communities',
    stats: [
      { label: '1. Mount Laurel', value: '$380K', sublabel: '(Burlington)' },
      { label: '2. Princeton', value: '$720K', sublabel: '(Mercer)' },
      { label: '3. Edison', value: '$520K', sublabel: '(Middlesex)' },
      { label: '4. Moorestown', value: '$465K', sublabel: '(Burlington)' },
      { label: '5. Hamilton', value: '$340K', sublabel: '(Mercer)' },
    ],
    source: 'Based on recent transaction volume',
  },
];

// Icon SVG paths
const icons = {
  'home-dollar': 'M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6 M12 14v.01M12 8h.01',
  'chart-trend': 'M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z',
  'map-pins': 'M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z M15 11a3 3 0 11-6 0 3 3 0 016 0z',
};
---

<section class="market-insights">
  <div class="container">
    <div class="section-header">
      <h2>Know Your Market Before You List</h2>
      <p class="section-subtitle">
        Current data for Burlington, Mercer, and Middlesex Countiesâ€”updated monthly so you can price with confidence.
      </p>
    </div>

    <div class="insights-grid">
      {marketData.map((card) => (
        <div class="insight-card">
          <!-- Icon -->
          <div class="card-icon">
            <svg width="40" height="40" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d={icons[card.icon]} stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>

          <!-- Title -->
          <h3 class="card-title">{card.title}</h3>

          <!-- Stats -->
          <div class="card-stats">
            {card.stats.map((stat) => (
              <div class="stat-item">
                <div class="stat-label">{stat.label}</div>
                <div class="stat-value">{stat.value}</div>
                {stat.sublabel && <div class="stat-sublabel">{stat.sublabel}</div>}
              </div>
            ))}
          </div>

          <!-- Source -->
          <div class="card-source">{card.source}</div>
        </div>
      ))}
    </div>

    <!-- Disclaimer -->
    <p class="disclaimer">
      Market data based on publicly available sources and industry reports. Figures are estimates and subject to change.
      Contact me for the most current information specific to your needs.
    </p>
  </div>
</section>

<style>
  .market-insights {
    padding: var(--space-12) 0;
    background-color: var(--off-white);
  }

  .section-header {
    text-align: center;
    max-width: 800px;
    margin: 0 auto var(--space-10);
  }

  .section-header h2 {
    font-size: var(--text-3xl);
    color: var(--text-primary);
    margin-bottom: var(--space-3);
  }

  .section-subtitle {
    font-size: var(--text-lg);
    color: var(--text-secondary);
    line-height: var(--leading-relaxed);
  }

  .insights-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-6);
    margin-bottom: var(--space-6);
  }

  @media (min-width: 768px) {
    .insights-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .insights-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .insight-card {
    background: var(--white);
    padding: var(--space-6);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-md);
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    transition: all var(--transition-base);
  }

  .insight-card:hover {
    box-shadow: var(--shadow-lg);
    transform: translateY(-4px);
  }

  .card-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 64px;
    height: 64px;
    background: linear-gradient(135deg, var(--c21-gold-light), var(--c21-gold));
    border-radius: var(--radius-full);
    color: var(--white);
    margin-bottom: var(--space-2);
  }

  .card-title {
    font-size: var(--text-lg);
    font-weight: var(--font-bold);
    color: var(--text-primary);
    margin-bottom: var(--space-3);
  }

  .card-stats {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
    flex: 1;
  }

  .stat-item {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
    padding-bottom: var(--space-3);
    border-bottom: 1px solid var(--border-color);
  }

  .stat-item:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .stat-label {
    font-size: var(--text-sm);
    color: var(--text-secondary);
    font-weight: var(--font-medium);
  }

  .stat-value {
    font-size: var(--text-2xl);
    color: var(--c21-gold);
    font-weight: var(--font-bold);
    white-space: nowrap;
  }

  .stat-sublabel {
    font-size: var(--text-xs);
    color: var(--text-secondary);
    font-style: italic;
  }

  .card-source {
    font-size: var(--text-xs);
    color: var(--dark-gray);
    font-style: italic;
    padding-top: var(--space-2);
    border-top: 1px solid var(--border-color);
  }

  .disclaimer {
    text-align: center;
    font-size: var(--text-sm);
    color: var(--text-secondary);
    font-style: italic;
    max-width: 700px;
    margin: 0 auto;
    line-height: var(--leading-relaxed);
  }
</style>
