---
/**
 * HeroSection Component
 * Above-fold hero section with headshot, headline, and dual CTAs
 */

interface Props {
  headline?: string;
  subheadline?: string;
  description?: string;
  ctaPrimary?: { text: string; href: string };
  ctaSecondary?: { text: string; href: string };
}

const {
  headline = 'Steven Frato',
  subheadline = 'Your Century 21 Partner in South Jersey Real Estate',
  description = 'Helping first-time homebuyers and families find their perfect home in Burlington, Mercer, and Middlesex Counties. Local expertise, global resources, personalized service.',
  ctaPrimary = { text: 'Schedule Consultation', href: '#contact' },
  ctaSecondary = { text: 'Browse Listings', href: '/listings' },
} = Astro.props;
---

<section class="hero">
  <div class="container">
    <div class="hero-content">
      <!-- Professional Headshot -->
      <div class="hero-image">
        <img
          src="/images/headshot.jpg"
          alt="Steven Frato - Century 21 Real Estate Agent"
          class="headshot"
          width="200"
          height="200"
          loading="eager"
        />
      </div>

      <!-- Hero Text -->
      <div class="hero-text">
        <h1 class="hero-headline">{headline}</h1>
        <p class="hero-subheadline">{subheadline}</p>
        <p class="hero-description">{description}</p>

        <!-- CTAs -->
        <div class="hero-ctas">
          <a href={ctaPrimary.href} class="btn btn-primary btn-large">
            {ctaPrimary.text}
          </a>
          <a href={ctaSecondary.href} class="btn btn-secondary btn-large">
            {ctaSecondary.text}
          </a>
        </div>

        <!-- Trust Badges -->
        <div class="trust-badges">
          <div class="badge">
            <svg class="badge-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            <span>Licensed NJ Agent</span>
          </div>
          <div class="badge">
            <svg class="badge-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M12 2L2 7v10c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V7l-10-5z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            <span>Century 21 Network</span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Decorative Background -->
  <div class="hero-background" aria-hidden="true"></div>
</section>

<style>
  .hero {
    position: relative;
    background: linear-gradient(135deg,
      #FFF8E7 0%,
      #FFFBF0 20%,
      var(--white) 45%,
      var(--off-white) 70%,
      #F8F8F8 100%);
    padding: var(--space-16) 0 var(--space-12);
    overflow: hidden;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-8);
    text-align: center;
  }

  /* Headshot */
  .hero-image {
    flex-shrink: 0;
  }

  .headshot {
    width: 200px;
    height: 200px;
    border-radius: var(--radius-full);
    object-fit: cover;
    border: 4px solid var(--c21-gold);
    box-shadow: var(--shadow-lg);
  }

  /* Hero Text */
  .hero-text {
    max-width: 800px;
  }

  .hero-headline {
    font-family: var(--font-heading);
    font-size: var(--text-4xl);
    font-weight: var(--font-bold);
    color: var(--text-primary);
    margin-bottom: var(--space-3);
    line-height: var(--leading-tight);
  }

  .hero-subheadline {
    font-size: var(--text-2xl);
    color: var(--c21-gold);
    font-weight: var(--font-semibold);
    margin-bottom: var(--space-4);
    line-height: var(--leading-normal);
  }

  .hero-description {
    font-size: var(--text-lg);
    color: var(--text-secondary);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-8);
  }

  /* CTAs */
  .hero-ctas {
    display: flex;
    gap: var(--space-4);
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: var(--space-6);
  }

  /* Trust Badges */
  .trust-badges {
    display: flex;
    gap: var(--space-6);
    justify-content: center;
    flex-wrap: wrap;
  }

  .badge {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-sm);
    color: var(--text-secondary);
    font-weight: var(--font-medium);
  }

  .badge-icon {
    color: var(--c21-gold);
  }

  /* Decorative Background */
  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1;
    opacity: 0.03;
    background-image:
      radial-gradient(circle at 20% 50%, var(--c21-gold) 0%, transparent 50%),
      radial-gradient(circle at 80% 80%, var(--c21-gold) 0%, transparent 50%);
    pointer-events: none;
  }

  /* Responsive */
  @media (min-width: 768px) {
    .hero {
      padding: calc(var(--space-16) + var(--space-8)) 0 var(--space-16);
    }

    .hero-content {
      flex-direction: row;
      text-align: left;
      align-items: center;
    }

    .hero-image {
      order: 2;
    }

    .hero-text {
      order: 1;
      flex: 1;
    }

    .hero-ctas {
      justify-content: flex-start;
    }

    .trust-badges {
      justify-content: flex-start;
    }

    .headshot {
      width: 250px;
      height: 250px;
    }
  }

  @media (min-width: 1024px) {
    .headshot {
      width: 300px;
      height: 300px;
    }
  }

  @media (max-width: 767px) {
    .hero {
      padding: var(--space-12) 0 var(--space-10);
    }

    .hero-ctas {
      flex-direction: column;
      width: 100%;
    }

    .btn-large {
      width: 100%;
    }
  }
</style>
