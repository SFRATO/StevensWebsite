---
/**
 * ContactForm Component
 * Lead capture form using Netlify Forms
 * Features: validation, spam protection (honeypot), accessible
 */
import TownZipFieldIsland from './TownZipFieldIsland';
import { getTownZipMappings, getAllValidZipcodes } from '../data/town-mappings';

interface Props {
  formName?: string;
}

const { formName = 'contact' } = Astro.props;

// Get data for town/zip autocomplete
const townZipMappings = getTownZipMappings();
const validZipcodes = getAllValidZipcodes();
---

<section id="contact" class="contact-section">
  <div class="container">
    <div class="contact-grid">
      <!-- Form Introduction -->
      <div class="contact-intro">
        <h2>Get in Touch</h2>
        <p class="intro-text">
          Ready to find your dream home in Burlington, Mercer, or Middlesex County?
          Fill out the form and I'll get back to you within 24 hours.
        </p>

        <!-- Contact Info -->
        <div class="contact-info">
          <div class="contact-item">
            <div class="contact-icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" stroke="currentColor" stroke-width="2"/>
              </svg>
            </div>
            <div>
              <div class="contact-label">Phone</div>
              <a href="tel:+16097890126" class="contact-link">(609) 789-0126</a>
            </div>
          </div>

          <div class="contact-item">
            <div class="contact-icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" stroke="currentColor" stroke-width="2"/>
              </svg>
            </div>
            <div>
              <div class="contact-label">Email</div>
              <a href="mailto:sf@stevenfrato.com" class="contact-link">sf@stevenfrato.com</a>
            </div>
          </div>

          <div class="contact-item">
            <div class="contact-icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z" stroke="currentColor" stroke-width="2"/>
              </svg>
            </div>
            <div>
              <div class="contact-label">Office</div>
              <div class="contact-text">136 Farnsworth Ave, Bordentown, NJ</div>
            </div>
          </div>
        </div>
      </div>

      <!-- Contact Form -->
      <div class="contact-form-wrapper">
        <form
          name={formName}
          method="POST"
          data-netlify="true"
          netlify-honeypot="bot-field"
          class="contact-form"
        >
          <!-- Hidden fields for Netlify -->
          <input type="hidden" name="form-name" value={formName} />

          <!-- Honeypot spam protection -->
          <p class="visually-hidden">
            <label>
              Don't fill this out if you're human: <input name="bot-field" />
            </label>
          </p>

          <!-- Name Field -->
          <div class="form-group">
            <label for="name" class="form-label">
              Full Name <span class="required">*</span>
            </label>
            <input
              type="text"
              id="name"
              name="name"
              class="form-input"
              required
              aria-required="true"
              placeholder="John Smith"
            />
          </div>

          <!-- Email Field -->
          <div class="form-group">
            <label for="email" class="form-label">
              Email Address <span class="required">*</span>
            </label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-input"
              required
              aria-required="true"
              placeholder="john@example.com"
            />
          </div>

          <!-- Phone Field -->
          <div class="form-group">
            <label for="phone" class="form-label">
              Phone Number <span class="required">*</span>
            </label>
            <input
              type="tel"
              id="phone"
              name="phone"
              class="form-input"
              required
              aria-required="true"
              placeholder="(555) 123-4567"
            />
          </div>

          <!-- Town/Zip Fields -->
          <div class="form-group-row">
            <TownZipFieldIsland
              client:load
              mappings={townZipMappings}
              validZipcodes={validZipcodes}
              townRequired={false}
              zipcodeRequired={false}
            />
          </div>

          <!-- Interest Type -->
          <div class="form-group">
            <label for="interest" class="form-label">
              I'm interested in
            </label>
            <select id="interest" name="interest" class="form-select">
              <option value="buying">Buying a Home</option>
              <option value="selling">Selling a Home</option>
              <option value="both">Both Buying & Selling</option>
              <option value="investment">Investment Property</option>
              <option value="consultation">General Consultation</option>
            </select>
          </div>

          <!-- Message Field -->
          <div class="form-group">
            <label for="message" class="form-label">
              Message
            </label>
            <textarea
              id="message"
              name="message"
              class="form-textarea"
              rows="5"
              placeholder="Tell me about your real estate needs..."
            ></textarea>
          </div>

          <!-- Privacy Notice -->
          <div class="form-privacy">
            <p>
              <small>
                By submitting this form, you agree to be contacted by Steven Frato
                regarding your real estate inquiry. Your information will never be shared.
              </small>
            </p>
          </div>

          <!-- Submit Button -->
          <button type="submit" class="btn btn-primary btn-large btn-block">
            Send Message
          </button>
        </form>
      </div>
    </div>
  </div>
</section>

<style>
  .contact-section {
    padding: var(--space-12) 0;
    background: linear-gradient(135deg, var(--light-gray) 0%, var(--off-white) 100%);
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-10);
  }

  @media (min-width: 1024px) {
    .contact-grid {
      grid-template-columns: 1fr 1.5fr;
      gap: var(--space-12);
    }
  }

  /* Contact Intro */
  .contact-intro h2 {
    font-size: var(--text-3xl);
    color: var(--text-primary);
    margin-bottom: var(--space-4);
  }

  .intro-text {
    font-size: var(--text-lg);
    color: var(--text-secondary);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-8);
  }

  .contact-info {
    display: flex;
    flex-direction: column;
    gap: var(--space-5);
  }

  .contact-item {
    display: flex;
    gap: var(--space-3);
    align-items: flex-start;
  }

  .contact-icon {
    flex-shrink: 0;
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--c21-gold);
    border-radius: var(--radius-md);
    color: var(--white);
  }

  .contact-label {
    font-size: var(--text-sm);
    color: var(--text-secondary);
    font-weight: var(--font-medium);
    margin-bottom: var(--space-1);
  }

  .contact-link {
    font-size: var(--text-lg);
    color: var(--text-primary);
    font-weight: var(--font-semibold);
    text-decoration: none;
  }

  .contact-link:hover {
    color: var(--c21-gold);
  }

  .contact-text {
    font-size: var(--text-lg);
    color: var(--text-primary);
    font-weight: var(--font-medium);
  }

  /* Form Wrapper */
  .contact-form-wrapper {
    background: var(--white);
    padding: var(--space-8);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-lg);
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: var(--space-5);
  }

  .form-group {
    display: flex;
    flex-direction: column;
  }

  .form-label {
    font-size: var(--text-base);
    font-weight: var(--font-semibold);
    color: var(--text-primary);
    margin-bottom: var(--space-2);
  }

  .required {
    color: var(--alert-red);
  }

  .form-input,
  .form-select,
  .form-textarea {
    width: 100%;
    padding: var(--space-3);
    font-size: var(--text-base);
    font-family: var(--font-primary);
    border: 2px solid var(--border-color);
    border-radius: var(--radius-md);
    background: var(--white);
    color: var(--text-primary);
    transition: all var(--transition-base);
  }

  .form-input:focus,
  .form-select:focus,
  .form-textarea:focus {
    outline: none;
    border-color: var(--c21-gold);
    box-shadow: 0 0 0 3px rgba(201, 156, 51, 0.1);
  }

  .form-input::placeholder,
  .form-textarea::placeholder {
    color: var(--dark-gray);
  }

  .form-textarea {
    resize: vertical;
    min-height: 120px;
  }

  .form-group-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-4);
  }

  @media (max-width: 480px) {
    .form-group-row {
      grid-template-columns: 1fr;
    }
  }

  .form-privacy {
    margin-top: var(--space-2);
  }

  .form-privacy p {
    margin: 0;
    color: var(--text-secondary);
    line-height: var(--leading-normal);
  }

  .btn-block {
    width: 100%;
  }

  /* Success/Error States (will be shown via Netlify) */
  .form-success,
  .form-error {
    padding: var(--space-4);
    border-radius: var(--radius-md);
    margin-bottom: var(--space-4);
  }

  .form-success {
    background: #d4edda;
    border: 1px solid #c3e6cb;
    color: #155724;
  }

  .form-error {
    background: #f8d7da;
    border: 1px solid #f5c6cb;
    color: #721c24;
  }
</style>
