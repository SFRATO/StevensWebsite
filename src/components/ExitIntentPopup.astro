---
/**
 * ExitIntentPopup Component
 * Simplified lead capture that triggers on exit intent
 * Shows once per session, respects dismissal
 */
interface Props {
  hideOnPages?: string[];
}

const {
  hideOnPages = ['/thank-you', '/contact'],
} = Astro.props;

// Check if current page should hide the popup
const currentPath = Astro.url.pathname;
const shouldHide = hideOnPages.some(page => currentPath.startsWith(page));
---

{!shouldHide && (
  <div class="exit-popup-overlay" id="exit-popup" aria-hidden="true" role="dialog" aria-modal="true" aria-labelledby="exit-popup-title">
    <div class="exit-popup">
      <button class="popup-close" aria-label="Close popup" id="exit-popup-close">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
          <path d="M6 18L18 6M6 6l12 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>

      <div class="popup-content">
        <div class="popup-icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none">
            <path d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>

        <h2 id="exit-popup-title">Before You Go...</h2>
        <p>Get free market updates for your area. No spam, just helpful insights when data changes.</p>

        <form
          name="exit-intent"
          method="POST"
          data-netlify="true"
          netlify-honeypot="bot-field"
          class="popup-form"
          id="exit-intent-form"
        >
          <input type="hidden" name="form-name" value="exit-intent" />
          <input type="hidden" name="intent" value="home-value" />
          <p class="hidden">
            <label>Don't fill this out: <input name="bot-field" /></label>
          </p>

          <!-- Timeline Question -->
          <div class="timeline-question">
            <label class="timeline-label">When are you thinking of making a move?</label>
            <div class="timeline-options">
              <label class="timeline-option">
                <input type="radio" name="timeline" value="within-30-days" />
                <span>Within 30 days</span>
              </label>
              <label class="timeline-option">
                <input type="radio" name="timeline" value="1-3-months" />
                <span>1-3 months</span>
              </label>
              <label class="timeline-option">
                <input type="radio" name="timeline" value="3-6-months" checked />
                <span>3-6 months</span>
              </label>
              <label class="timeline-option">
                <input type="radio" name="timeline" value="6-plus-months" />
                <span>Just curious</span>
              </label>
            </div>
          </div>

          <div class="form-row">
            <input
              type="email"
              name="email"
              placeholder="Your email address"
              required
              aria-label="Email address"
            />
            <input
              type="text"
              name="zipcode"
              placeholder="Zip code"
              pattern="[0-9]{5}"
              maxlength="5"
              required
              aria-label="Zip code"
            />
          </div>

          <button type="submit" class="popup-submit">
            Get Market Updates
          </button>

          <p class="privacy-note">
            <svg width="12" height="12" viewBox="0 0 24 24" fill="none">
              <path d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            No spam. Unsubscribe anytime.
          </p>
        </form>

        <div class="popup-success" id="exit-popup-success" style="display: none;">
          <div class="success-icon">
            <svg width="48" height="48" viewBox="0 0 24 24" fill="none">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
          <h3>You're Signed Up!</h3>
          <p>You'll receive market updates when data changes in your area.</p>
        </div>
      </div>
    </div>
  </div>
)}

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const popup = document.getElementById('exit-popup');
    const closeBtn = document.getElementById('exit-popup-close');
    const form = document.getElementById('exit-intent-form') as HTMLFormElement;
    const successMsg = document.getElementById('exit-popup-success');

    if (!popup || !closeBtn || !form) return;

    // Session storage key
    const STORAGE_KEY = 'exit_popup_shown';

    // Check if already shown this session
    const alreadyShown = sessionStorage.getItem(STORAGE_KEY);
    if (alreadyShown) return;

    let popupShown = false;

    const showPopup = () => {
      if (popupShown) return;
      popupShown = true;
      sessionStorage.setItem(STORAGE_KEY, 'true');

      popup.classList.add('visible');
      popup.setAttribute('aria-hidden', 'false');

      // Focus trap
      const firstInput = form.querySelector('input');
      if (firstInput) firstInput.focus();

      // Track popup view
      if (typeof window.gtag === 'function') {
        window.gtag('event', 'popup_view', {
          event_category: 'Lead',
          event_label: 'Exit Intent Popup',
        });
      }
    };

    const hidePopup = () => {
      popup.classList.remove('visible');
      popup.setAttribute('aria-hidden', 'true');
    };

    // Exit intent detection (desktop)
    document.addEventListener('mouseout', (e) => {
      // Check if mouse left the viewport from top
      if (e.clientY <= 0 && !popupShown) {
        showPopup();
      }
    });

    // Mobile: show after 30 seconds of engagement
    let mobileTimeout: ReturnType<typeof setTimeout>;
    if (window.innerWidth < 768) {
      mobileTimeout = setTimeout(() => {
        if (!popupShown && document.visibilityState === 'visible') {
          showPopup();
        }
      }, 30000);
    }

    // Close button
    closeBtn.addEventListener('click', hidePopup);

    // Close on overlay click
    popup.addEventListener('click', (e) => {
      if (e.target === popup) {
        hidePopup();
      }
    });

    // Close on escape
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && popup.classList.contains('visible')) {
        hidePopup();
      }
    });

    // Form submission
    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      const formData = new FormData(form);
      const submitBtn = form.querySelector('button[type="submit"]') as HTMLButtonElement;

      if (submitBtn) {
        submitBtn.disabled = true;
        submitBtn.textContent = 'Submitting...';
      }

      try {
        const response = await fetch('/', {
          method: 'POST',
          headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
          body: new URLSearchParams(formData as any).toString(),
        });

        if (response.ok) {
          // Show success
          form.style.display = 'none';
          if (successMsg) {
            successMsg.style.display = 'block';
          }

          // Track conversion
          if (typeof window.gtag === 'function') {
            window.gtag('event', 'form_submit', {
              event_category: 'Lead',
              event_label: 'Exit Intent Popup',
            });
          }

          // Auto-close after 3 seconds
          setTimeout(hidePopup, 3000);
        } else {
          throw new Error('Form submission failed');
        }
      } catch (error) {
        if (submitBtn) {
          submitBtn.disabled = false;
          submitBtn.textContent = 'Get Market Updates';
        }
        alert('There was an error. Please try again.');
      }
    });

    // Cleanup
    window.addEventListener('beforeunload', () => {
      if (mobileTimeout) clearTimeout(mobileTimeout);
    });
  });
</script>

<style>
  .exit-popup-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.7);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: var(--z-modal);
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease;
    padding: var(--space-4);
  }

  .exit-popup-overlay.visible {
    opacity: 1;
    visibility: visible;
  }

  .exit-popup {
    background: var(--white);
    border-radius: var(--radius-xl);
    max-width: 420px;
    width: 100%;
    position: relative;
    transform: scale(0.9) translateY(20px);
    transition: transform 0.3s ease;
    box-shadow: var(--shadow-lg);
  }

  .exit-popup-overlay.visible .exit-popup {
    transform: scale(1) translateY(0);
  }

  .popup-close {
    position: absolute;
    top: var(--space-3);
    right: var(--space-3);
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--off-white);
    border: none;
    border-radius: var(--radius-full);
    cursor: pointer;
    color: var(--text-secondary);
    transition: all var(--transition-base);
  }

  .popup-close:hover {
    background: var(--light-gray);
    color: var(--text-primary);
  }

  .popup-content {
    padding: var(--space-8);
    text-align: center;
  }

  .popup-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 64px;
    height: 64px;
    background: linear-gradient(135deg, var(--c21-gold-light), var(--c21-gold));
    border-radius: var(--radius-full);
    color: var(--white);
    margin-bottom: var(--space-4);
  }

  .popup-content h2 {
    font-size: var(--text-2xl);
    color: var(--text-primary);
    margin-bottom: var(--space-2);
  }

  .popup-content > p {
    color: var(--text-secondary);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-6);
  }

  .popup-form {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .hidden {
    display: none !important;
  }

  .form-row {
    display: flex;
    gap: var(--space-3);
  }

  .form-row input[type="email"] {
    flex: 2;
  }

  .form-row input[type="text"] {
    flex: 1;
    max-width: 100px;
  }

  /* Timeline Question */
  .timeline-question {
    margin-bottom: var(--space-4);
  }

  .timeline-label {
    display: block;
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
    color: var(--text-primary);
    margin-bottom: var(--space-2);
    text-align: left;
  }

  .timeline-options {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-2);
  }

  .timeline-option {
    position: relative;
    cursor: pointer;
  }

  .timeline-option input {
    position: absolute;
    opacity: 0;
    width: 0;
    height: 0;
  }

  .timeline-option span {
    display: block;
    padding: var(--space-2) var(--space-3);
    border: 2px solid var(--border-color);
    border-radius: var(--radius-md);
    font-size: var(--text-xs);
    text-align: center;
    transition: all var(--transition-base);
  }

  .timeline-option:hover span {
    border-color: var(--c21-gold);
    background: rgba(201, 156, 51, 0.05);
  }

  .timeline-option input:checked + span {
    border-color: var(--c21-gold);
    background: rgba(201, 156, 51, 0.1);
    color: var(--c21-gold-dark);
    font-weight: var(--font-medium);
  }

  .popup-form input[type="email"],
  .popup-form input[type="text"] {
    padding: var(--space-3) var(--space-4);
    border: 2px solid var(--border-color);
    border-radius: var(--radius-md);
    font-size: var(--text-base);
    transition: all var(--transition-base);
  }

  .popup-form input[type="email"]:focus,
  .popup-form input[type="text"]:focus {
    outline: none;
    border-color: var(--c21-gold);
    box-shadow: 0 0 0 3px rgba(201, 156, 51, 0.1);
  }

  .popup-submit {
    padding: var(--space-4);
    background-color: var(--c21-gold);
    color: var(--white);
    border: none;
    border-radius: var(--radius-md);
    font-weight: var(--font-semibold);
    font-size: var(--text-base);
    cursor: pointer;
    transition: all var(--transition-base);
  }

  .popup-submit:hover {
    background-color: var(--c21-gold-dark);
  }

  .popup-submit:disabled {
    opacity: 0.7;
    cursor: not-allowed;
  }

  .privacy-note {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-1);
    font-size: var(--text-xs);
    color: var(--text-secondary);
    margin-top: var(--space-2);
  }

  /* Success state */
  .popup-success {
    padding: var(--space-4) 0;
  }

  .popup-success .success-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 80px;
    height: 80px;
    background: rgba(76, 175, 80, 0.1);
    border-radius: var(--radius-full);
    color: var(--accent-green);
    margin-bottom: var(--space-4);
  }

  .popup-success h3 {
    font-size: var(--text-xl);
    color: var(--text-primary);
    margin-bottom: var(--space-2);
  }

  .popup-success p {
    color: var(--text-secondary);
  }

  @media (max-width: 479px) {
    .form-row {
      flex-direction: column;
    }

    .form-row input[type="text"] {
      max-width: 100%;
    }
  }
</style>
