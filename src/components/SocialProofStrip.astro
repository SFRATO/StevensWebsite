---
/**
 * SocialProofStrip Component
 * Displays social proof metrics near the lead capture form
 * Psychology: Social proof reduces uncertainty at decision point
 */

interface Props {
  reportsCount?: number;
  rating?: number;
}

const { reportsCount = 150, rating = 5 } = Astro.props;
---

<div class="social-proof-strip">
  <div class="proof-item">
    <span class="proof-number">{reportsCount}+</span>
    <span class="proof-label">Reports sent this year</span>
  </div>
  <div class="proof-divider"></div>
  <div class="proof-item">
    <span class="proof-stars">{'â˜…'.repeat(rating)}</span>
    <span class="proof-label">5-star reviews</span>
  </div>
</div>

<style>
  .social-proof-strip {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-4);
    padding: var(--space-3) var(--space-4);
    background: var(--off-white);
    border-radius: var(--radius-md);
    margin: var(--space-3) 0;
  }

  .proof-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-1);
  }

  .proof-number {
    font-size: var(--text-lg);
    font-weight: var(--font-bold);
    color: var(--c21-gold);
  }

  .proof-label {
    font-size: var(--text-xs);
    color: var(--text-secondary);
  }

  .proof-divider {
    width: 1px;
    height: 24px;
    background: var(--border-color);
  }

  .proof-stars {
    color: var(--c21-gold);
    font-size: var(--text-lg);
  }
</style>
