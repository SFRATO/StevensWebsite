---
/**
 * ServiceAreasSection Component
 * Compact display of service areas with link to full directory
 */

const counties = [
  { name: 'Burlington County', slug: 'burlington-county' },
  { name: 'Mercer County', slug: 'mercer-county' },
  { name: 'Middlesex County', slug: 'middlesex-county' },
];
---

<section class="service-areas">
  <div class="container">
    <div class="areas-content">
      <div class="areas-text">
        <h2>Where I Serve</h2>
        <p>Local expertise across Central and South Jersey.</p>
        <div class="county-links">
          {counties.map((county, i) => (
            <>
              <a href={`/market/${county.slug}/`}>{county.name}</a>
              {i < counties.length - 1 && <span class="divider">â€¢</span>}
            </>
          ))}
        </div>
      </div>
      <a href="/areas/" class="btn btn-primary">
        View All Towns
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none">
          <path d="M9 5l7 7-7 7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  .service-areas {
    padding: var(--space-8) 0;
    background: var(--off-white);
    border-top: 1px solid var(--border-color);
    border-bottom: 1px solid var(--border-color);
  }

  .areas-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-4);
    text-align: center;
  }

  @media (min-width: 768px) {
    .areas-content {
      flex-direction: row;
      justify-content: space-between;
      text-align: left;
    }
  }

  .areas-text h2 {
    font-size: var(--text-xl);
    color: var(--text-primary);
    margin-bottom: var(--space-1);
  }

  .areas-text p {
    font-size: var(--text-sm);
    color: var(--text-secondary);
    margin-bottom: var(--space-2);
  }

  .county-links {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
    justify-content: center;
  }

  @media (min-width: 768px) {
    .county-links {
      justify-content: flex-start;
    }
  }

  .county-links a {
    color: var(--c21-gold);
    text-decoration: none;
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
  }

  .county-links a:hover {
    text-decoration: underline;
  }

  .divider {
    color: var(--text-secondary);
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    white-space: nowrap;
  }
</style>
