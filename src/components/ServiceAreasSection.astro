---
/**
 * ServiceAreasSection Component
 * Display counties and towns served
 */

const serviceAreas = [
  {
    county: 'Burlington County',
    slug: 'burlington-county',
    towns: ['Mount Laurel', 'Moorestown', 'Medford', 'Cherry Hill', 'Marlton', 'Evesham'],
  },
  {
    county: 'Mercer County',
    slug: 'mercer-county',
    towns: ['Princeton', 'Trenton', 'Hamilton', 'Lawrence', 'Hopewell', 'Ewing'],
  },
  {
    county: 'Middlesex County',
    slug: 'middlesex-county',
    towns: ['Edison', 'Woodbridge', 'Perth Amboy', 'East Brunswick', 'Piscataway', 'New Brunswick'],
  },
];
---

<section class="service-areas">
  <div class="container">
    <div class="section-header">
      <h2>Where I Serve</h2>
      <p class="section-subtitle">
        Proudly serving Burlington, Mercer, and Middlesex Counties in New Jersey
      </p>
    </div>

    <div class="areas-grid">
      {serviceAreas.map((area) => (
        <a href={`/market/${area.slug}/`} class="area-card">
          <h3 class="area-county">
            {area.county}
            <svg class="arrow-icon" width="16" height="16" viewBox="0 0 24 24" fill="none">
              <path d="M9 5l7 7-7 7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </h3>
          <ul class="towns-list">
            {area.towns.map((town) => (
              <li class="town-item">
                <svg class="check-icon" width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M13.5 4.5l-7 7-3.5-3.5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                {town}
              </li>
            ))}
          </ul>
          <span class="view-market-link">View market data</span>
        </a>
      ))}
    </div>

    <div class="cta-box">
      <p class="cta-text">
        Not sure if I serve your area? <a href="#contact" class="cta-link">Contact me</a> and let's talk!
      </p>
    </div>
  </div>
</section>

<style>
  .service-areas {
    padding: var(--space-12) 0;
    background-color: var(--white);
  }

  .section-header {
    text-align: center;
    max-width: 700px;
    margin: 0 auto var(--space-10);
  }

  .section-header h2 {
    font-size: var(--text-3xl);
    color: var(--text-primary);
    margin-bottom: var(--space-3);
  }

  .section-subtitle {
    font-size: var(--text-lg);
    color: var(--text-secondary);
    line-height: var(--leading-relaxed);
  }

  .areas-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-6);
    margin-bottom: var(--space-10);
  }

  @media (min-width: 768px) {
    .areas-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .area-card {
    display: block;
    background: var(--light-gray);
    padding: var(--space-6);
    border-radius: var(--radius-lg);
    border: 2px solid var(--border-color);
    text-decoration: none;
    color: inherit;
    transition: all var(--transition-base);
  }

  .area-card:hover {
    border-color: var(--c21-gold);
    box-shadow: var(--shadow-md);
    transform: translateY(-2px);
  }

  .area-county {
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: var(--text-xl);
    font-weight: var(--font-bold);
    color: var(--c21-gold);
    margin-bottom: var(--space-4);
  }

  .arrow-icon {
    opacity: 0;
    transform: translateX(-4px);
    transition: all var(--transition-base);
  }

  .area-card:hover .arrow-icon {
    opacity: 1;
    transform: translateX(0);
  }

  .view-market-link {
    display: block;
    margin-top: var(--space-4);
    padding-top: var(--space-3);
    border-top: 1px solid var(--border-color);
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    color: var(--c21-gold);
  }

  .towns-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .town-item {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    color: var(--text-primary);
    font-size: var(--text-base);
  }

  .check-icon {
    color: var(--c21-gold);
    flex-shrink: 0;
  }

  .cta-box {
    text-align: center;
    padding: var(--space-6);
    background: linear-gradient(135deg, var(--c21-gold-light), var(--c21-gold));
    border-radius: var(--radius-lg);
  }

  .cta-text {
    font-size: var(--text-lg);
    color: var(--white);
    font-weight: var(--font-medium);
    margin: 0;
  }

  .cta-link {
    color: var(--white);
    text-decoration: underline;
    font-weight: var(--font-bold);
  }

  .cta-link:hover {
    text-decoration: none;
  }
</style>
