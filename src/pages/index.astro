---
/**
 * Landing Page - Steven Frato Century 21 Real Estate
 * Homepage with CTA hero, county market data, value propositions, and contact
 */
import BaseLayout from '@layouts/BaseLayout.astro';
import MarketInsightsDashboard from '@components/MarketInsightsDashboard.astro';
import ContactForm from '@components/ContactForm.astro';

// Import market data
import countiesData from '../../data/processed/counties.json';

interface CountyData {
  region: string;
  slug: string;
  state_code: string;
  period_end: string;
  median_sale_price: number | null;
  median_sale_price_yoy: number | null;
  inventory: number | null;
  inventory_yoy: number | null;
  months_of_supply: number | null;
  median_dom: number | null;
  market_type: 'seller' | 'buyer' | 'balanced';
  ai_insight?: string;
}

const counties = countiesData as CountyData[];

// Format currency
const formatCurrency = (value: number | null): string => {
  if (value === null) return 'N/A';
  return new Intl.NumberFormat('en-US', {
    style: 'currency',
    currency: 'USD',
    maximumFractionDigits: 0,
  }).format(value);
};
---

<BaseLayout
  title="Steven Frato - Century 21 Real Estate Agent | Burlington, Mercer & Middlesex County NJ"
  description="Experienced Century 21 real estate agent serving Burlington, Mercer, and Middlesex Counties, NJ. Specializing in first-time homebuyers. Call today for your free consultation."
  ogImage="/images/headshot.jpg"
>
  <!-- CTA Hero Section -->
  <section class="market-hero">
    <div class="container">
      <div class="hero-agent">
        <span class="hero-agent-name">Steven Frato</span>
      </div>
      <h1>Navigate the NJ Real Estate Market with Confidence</h1>
      <p class="hero-subtitle">
        Whether you're buying or selling, get expert guidance from a local agent who knows Burlington, Mercer, and Middlesex Counties.
      </p>

      <div class="hero-cta">
        <a href="tel:+16097890126" class="btn btn-primary btn-lg">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
          </svg>
          Call (609) 789-0126
        </a>
      </div>

      <p class="trust-line">Century 21 | Serving Burlington, Mercer & Middlesex Counties</p>
    </div>
  </section>

  <!-- County Market Data -->
  <section class="counties-section">
    <div class="container">
      <h2 class="counties-heading">Towns by County</h2>

      <div class="counties-grid">
        {counties.map((county) => (
          <a href={`/areas/#${county.slug}`} class="county-card">
            <div class="county-header">
              <h3>{county.region}</h3>
              <span class={`market-badge badge-${county.market_type}`}>
                {county.market_type === 'seller' ? "Seller's Market" :
                 county.market_type === 'buyer' ? "Buyer's Market" : 'Balanced'}
              </span>
            </div>

            <div class="county-stats">
              <div class="stat">
                <span class="stat-label">Median Price</span>
                <span class="stat-value">{formatCurrency(county.median_sale_price)}</span>
                {county.median_sale_price_yoy !== null && (
                  <span class={`stat-change ${county.median_sale_price_yoy >= 0 ? 'positive' : 'negative'}`}>
                    {county.median_sale_price_yoy >= 0 ? '+' : ''}{county.median_sale_price_yoy.toFixed(1)}% YoY
                  </span>
                )}
              </div>

              <div class="stat">
                <span class="stat-label">Days on Market</span>
                <span class="stat-value">{county.median_dom ?? 'N/A'}</span>
              </div>
            </div>

            <div class="county-footer">
              <span class="view-details">
                View Towns
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none">
                  <path d="M9 5l7 7-7 7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Market Insights Dashboard -->
  <MarketInsightsDashboard />

  <!-- First-Time Homebuyer Resources Preview -->
  <section class="resources-preview">
    <div class="container">
      <div class="resources-content">
        <div class="resources-text">
          <h2>First-Time Homebuyer?</h2>
          <p>
            I specialize in helping first-time buyers navigate the home buying process with confidence.
            From understanding mortgages to finding the perfect neighborhood, I'm here to guide you every step of the way.
          </p>
          <ul class="resources-list">
            <li>Pre-approval guidance and lender recommendations</li>
            <li>Step-by-step walkthrough of the buying process</li>
            <li>Neighborhood tours and school district information</li>
            <li>Negotiation support to get the best price</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Form Section -->
  <ContactForm />
</BaseLayout>

<style>
  /* Hero Section */
  .market-hero {
    background: linear-gradient(135deg, var(--charcoal) 0%, var(--charcoal) 70%, var(--c21-gold-dark) 100%);
    padding: var(--space-16) 0;
    text-align: center;
  }

  .market-hero h1 {
    font-family: var(--font-heading);
    font-size: var(--text-4xl);
    color: var(--white);
    margin-bottom: var(--space-4);
    line-height: 1.2;
  }

  .hero-subtitle {
    font-size: var(--text-lg);
    color: rgba(255, 255, 255, 0.85);
    max-width: 600px;
    margin: 0 auto var(--space-8);
    line-height: 1.6;
  }

  .hero-cta {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-4);
    margin-bottom: var(--space-6);
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-2);
    padding: var(--space-4) var(--space-8);
    border-radius: var(--radius-md);
    font-weight: var(--font-semibold);
    font-size: var(--text-base);
    text-decoration: none;
    transition: all var(--transition-base);
    cursor: pointer;
  }

  .btn-primary {
    background-color: var(--c21-gold);
    color: var(--white);
  }

  .btn-primary:hover {
    background-color: var(--c21-gold-dark);
    transform: translateY(-2px);
  }

  .btn-lg {
    padding: var(--space-5) var(--space-10);
    font-size: var(--text-lg);
  }

  .trust-line {
    color: rgba(255, 255, 255, 0.6);
    font-size: var(--text-sm);
    margin: 0;
  }

  .hero-agent {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-3);
    margin-bottom: var(--space-6);
  }

  .hero-agent-name {
    font-family: var(--font-heading);
    font-size: var(--text-2xl);
    font-weight: var(--font-bold);
    color: var(--white);
    letter-spacing: 0.02em;
  }

  @media (min-width: 768px) {
    .hero-agent-name {
      font-size: var(--text-3xl);
    }
  }

  @media (min-width: 640px) {
    .hero-cta {
      flex-direction: row;
      justify-content: center;
    }
  }

  @media (max-width: 768px) {
    .market-hero {
      padding: var(--space-12) 0;
    }

    .market-hero h1 {
      font-size: var(--text-2xl);
    }

    .hero-subtitle {
      font-size: var(--text-base);
    }

    .btn-lg {
      width: 100%;
      max-width: 300px;
    }

  }

  /* Counties Section */
  .counties-section {
    padding: var(--space-12) 0;
    background-color: var(--off-white);
  }

  .counties-heading {
    font-size: var(--text-2xl);
    color: var(--text-primary);
    margin-bottom: var(--space-6);
  }

  .counties-grid {
    display: grid;
    gap: var(--space-6);
  }

  @media (min-width: 768px) {
    .counties-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .counties-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .county-card {
    background: var(--white);
    border-radius: var(--radius-lg);
    padding: var(--space-6);
    box-shadow: var(--shadow-md);
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    transition: all var(--transition-base);
  }

  .county-card:hover {
    box-shadow: var(--shadow-lg);
    transform: translateY(-4px);
  }

  .county-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: var(--space-3);
    margin-bottom: var(--space-4);
  }

  .county-header h3 {
    font-size: var(--text-xl);
    color: var(--text-primary);
    margin: 0;
  }

  .market-badge {
    font-size: var(--text-xs);
    padding: var(--space-1) var(--space-2);
    border-radius: var(--radius-sm);
    font-weight: var(--font-semibold);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    white-space: nowrap;
  }

  .badge-seller {
    background-color: rgba(76, 175, 80, 0.1);
    color: var(--accent-green);
  }

  .badge-buyer {
    background-color: rgba(229, 57, 53, 0.1);
    color: var(--accent-red);
  }

  .badge-balanced {
    background-color: rgba(201, 156, 51, 0.1);
    color: var(--c21-gold);
  }

  .county-stats {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-4);
    margin-bottom: var(--space-4);
  }

  .stat {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .stat-label {
    font-size: var(--text-xs);
    color: var(--text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .stat-value {
    font-size: var(--text-lg);
    font-weight: var(--font-bold);
    color: var(--text-primary);
  }

  .stat-change {
    font-size: var(--text-xs);
    font-weight: var(--font-medium);
  }

  .stat-change.positive {
    color: var(--accent-green);
  }

  .stat-change.negative {
    color: var(--accent-red);
  }

  .county-footer {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    padding-top: var(--space-4);
    border-top: 1px solid var(--border-color);
    margin-top: auto;
  }

  .view-details {
    display: inline-flex;
    align-items: center;
    gap: var(--space-1);
    color: var(--c21-gold);
    font-weight: var(--font-semibold);
    font-size: var(--text-sm);
  }

  @media (max-width: 768px) {
    .counties-section {
      padding: var(--space-8) 0;
    }
  }

  /* First-Time Homebuyer Resources Preview */
  .resources-preview {
    padding: var(--space-12) 0;
    background: linear-gradient(135deg, var(--white) 0%, var(--light-gray) 100%);
  }

  .resources-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .resources-text h2 {
    font-size: var(--text-3xl);
    color: var(--text-primary);
    margin-bottom: var(--space-4);
  }

  .resources-text p {
    font-size: var(--text-lg);
    color: var(--text-secondary);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-6);
  }

  .resources-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .resources-list li {
    display: flex;
    align-items: flex-start;
    gap: var(--space-3);
    font-size: var(--text-base);
    color: var(--text-primary);
  }

  .resources-list li::before {
    content: 'âœ“';
    color: var(--c21-gold);
    font-weight: var(--font-bold);
    font-size: var(--text-xl);
    flex-shrink: 0;
  }
</style>
