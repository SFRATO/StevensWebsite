---
/**
 * Contact Page
 * Dedicated contact page with qualification quiz and information
 */
import BaseLayout from '@layouts/BaseLayout.astro';
import QualificationQuiz from '@components/QualificationQuiz.astro';
---

<BaseLayout
  title="Contact Steven Frato - Schedule Your Free Real Estate Consultation | Century 21 NJ"
  description="Ready to buy or sell in Burlington, Mercer, or Middlesex County? Contact Steven Frato for a free consultation. Call (609) 789-0126 or fill out our form."
>
  <!-- Page Header -->
  <section class="page-header">
    <div class="container">
      <h1>Let's Get Started</h1>
      <p class="subtitle">
        Answer a few quick questions and I'll send you a personalized market report
        for your area. No obligation - just helpful insights.
      </p>
    </div>
  </section>

  <!-- Contact Section with Quiz and Info -->
  <section class="contact-section">
    <div class="container">
      <div class="contact-grid">
        <!-- Contact Info Sidebar -->
        <div class="contact-info">
          <h2>Get in Touch</h2>
          <p class="info-intro">
            Have questions? I'm here to help with all your real estate needs in
            Burlington, Mercer, and Middlesex Counties.
          </p>

          <div class="contact-items">
            <div class="contact-item">
              <div class="contact-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                  <path d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" stroke="currentColor" stroke-width="2"/>
                </svg>
              </div>
              <div>
                <div class="contact-label">Phone</div>
                <a href="tel:+16097890126" class="contact-link">(609) 789-0126</a>
              </div>
            </div>

            <div class="contact-item">
              <div class="contact-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                  <path d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" stroke="currentColor" stroke-width="2"/>
                </svg>
              </div>
              <div>
                <div class="contact-label">Email</div>
                <a href="mailto:sf@stevenfrato.com" class="contact-link">sf@stevenfrato.com</a>
              </div>
            </div>

            <div class="contact-item">
              <div class="contact-icon">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                  <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z" stroke="currentColor" stroke-width="2"/>
                </svg>
              </div>
              <div>
                <div class="contact-label">Office</div>
                <div class="contact-text">136 Farnsworth Ave<br>Bordentown, NJ 08505</div>
              </div>
            </div>
          </div>

          <div class="service-areas">
            <h3>Service Areas</h3>
            <ul>
              <li>Burlington County</li>
              <li>Mercer County</li>
              <li>Middlesex County</li>
            </ul>
          </div>
        </div>

        <!-- Qualification Quiz -->
        <div class="quiz-container">
          <QualificationQuiz
            formName="contact-qualification"
            variant="full"
          />
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .page-header {
    padding: var(--space-10) 0 var(--space-6);
    background: linear-gradient(135deg, var(--charcoal) 0%, var(--charcoal) 70%, var(--c21-gold-dark) 100%);
    text-align: center;
  }

  .page-header h1 {
    font-size: var(--text-4xl);
    color: var(--white);
    margin-bottom: var(--space-3);
  }

  .subtitle {
    font-size: var(--text-lg);
    color: rgba(255, 255, 255, 0.85);
    line-height: var(--leading-relaxed);
    max-width: 700px;
    margin: 0 auto;
  }

  /* Contact Section */
  .contact-section {
    padding: var(--space-12) 0;
    background: var(--light-gray);
  }

  .contact-grid {
    display: grid;
    gap: var(--space-8);
  }

  @media (min-width: 1024px) {
    .contact-grid {
      grid-template-columns: 1fr 1.5fr;
      gap: var(--space-10);
    }
  }

  /* Contact Info */
  .contact-info {
    background: var(--white);
    padding: var(--space-6);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-md);
    height: fit-content;
  }

  .contact-info h2 {
    font-size: var(--text-2xl);
    color: var(--text-primary);
    margin-bottom: var(--space-3);
  }

  .info-intro {
    color: var(--text-secondary);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-6);
  }

  .contact-items {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    margin-bottom: var(--space-6);
  }

  .contact-item {
    display: flex;
    gap: var(--space-3);
    align-items: flex-start;
  }

  .contact-icon {
    flex-shrink: 0;
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--c21-gold);
    border-radius: var(--radius-md);
    color: var(--white);
  }

  .contact-label {
    font-size: var(--text-sm);
    color: var(--text-secondary);
    font-weight: var(--font-medium);
    margin-bottom: var(--space-1);
  }

  .contact-link {
    font-size: var(--text-lg);
    color: var(--text-primary);
    font-weight: var(--font-semibold);
    text-decoration: none;
    transition: color var(--transition-base);
  }

  .contact-link:hover {
    color: var(--c21-gold);
  }

  .contact-text {
    font-size: var(--text-base);
    color: var(--text-primary);
    line-height: var(--leading-relaxed);
  }

  /* Service Areas */
  .service-areas {
    padding-top: var(--space-5);
    border-top: 1px solid var(--border-color);
  }

  .service-areas h3 {
    font-size: var(--text-sm);
    color: var(--text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: var(--space-3);
  }

  .service-areas ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
  }

  .service-areas li {
    background: var(--light-gray);
    padding: var(--space-2) var(--space-3);
    border-radius: var(--radius-md);
    font-size: var(--text-sm);
    color: var(--text-primary);
  }

  /* Quiz Container */
  .quiz-container {
    /* Quiz component has its own styling */
  }
</style>
